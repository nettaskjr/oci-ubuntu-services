# Exemplo de terraform.tfvars - RENOMEIE PARA terraform.tfvars E PREENCHA SEUS VALORES

tenancy_ocid            = "ocid1.tenancy.oc1..xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" # OCID do seu Tenancy
user_ocid               = "ocid1.user.oc1..xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" # OCID do usuário que executa o Terrafor
fingerprint             = "xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx" # Fingerprint da chave API
private_key_path        = "~/.oci/oci_api_key.pem" # Ajuste o caminho
region                  = "sa-saopaulo-1" # Sua região OCI
ubuntu_image_ocid       = "ocid1.image.oc1.sa-saopaulo-1.aaaaaaaak3oxvmwi6r4oq2ptirg7eczdodqtfqdaqxfiablx3v6iqnduzuoa" # OCID da imagem Ubuntu 22.0
compartment_ocid        = "ocid1.compartment.oc1..xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" # OCID do compartimento onde os recursos serão criados
ssh_public_key          = "ssh-rsa ... seu_usuario@sua_maquina" # Ajuste o caminho para sua chave pública SSH
user_instance           = "vduser" # Nome de usuário para a instância VDI
vnc_password            = "123456" # Use uma senha entre 6-8 caracteres
instance_display_name   = "ubuntu-gnome-vdi" # Nome de exibição para a instância VDI
instance_shape          = "VM.Standard.A1.Flex" # Forma da instância, considere VM.Standard.E2.1.Micro ou VM.Standard.A1.Flex (com OCPUs e memória limitados)
instance_ocpus          = 2 # OCPUs para a instância (relevante para formas Flex)
instance_memory_in_gbs  = 6 # Memória em GBs para a instância (relevante para formas Flex)
boot_volume_size_in_gbs = 50 # Tamanho do volume de inicialização em GBs